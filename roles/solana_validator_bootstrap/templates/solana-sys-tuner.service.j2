[Unit]
Description=Solana System Tuner Service
After=network.target syslog.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
ExecStart={{ node.solana_home }}/.local/share/solana/install/active_release/bin/solana-sys-tuner --user {{ node.solana_user }}

[Install]
WantedBy=multi-user.target
